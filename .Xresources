rofi.opacity: 100
rofi.kb-cancel: Escape,Control+bracketleft
rofi.kb-row-up: Control+k
rofi.kb-row-down: Control+j
rofi.kb-accept-entry: Control+m,Return,KP_Enter
rofi.parse-hosts: true

! resize fonts
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

!## teh URxvt stuff
URxvt.font: xft:Ubuntu Mono:size=13,xft:WenQuanYi Micro Hei Mono:pixelsize=18:minspace=true,xft:SauceCodePro NF:pixelsize=16,xft:Symbola
URxvt.lineSpace: 2
URxvt.url-launcher:          vivaldi
URxvt.url-select.launcher:   vivaldi
URxvt.matcher.button:        1
URxvt.meta8:                 false
URxvt.keysym.C-Delete:       perl:matcher:last
URxvt.keysym.M-Delete:       perl:matcher:list
URxvt.keysym.C-h:            \034
URxvt.keysym.C-comma:        \036
URxvt.keysym.C-period:       \037
URxvt.perl-lib:              /home/amos/urxvt-perls
URxvt.perl-ext-common:       default,matcher,osc-xterm-clipboard,font-size
URxvt.url-select.underline:  true
URxvt.keysym.M-u:            perl:url-select:select_next
URxvt.borderless:            true
URxvt.letterSpace:           -1
URxvt.clipboard.autocopy:    true
URxvt.scrollstyle:           plain
URxvt*scrollBar:             false
!URxvt.depth:                 32
!URxvt*background:            rgba:0000/0000/0200/c800  !transparent
URxvt*transparent:           false
URxvt.fading:                0
URxvt.inputMethod:           fcitx
URxvt.preeditType:           OverTheSpot
URxvt*termName:              xterm-256color
URxvt*saveLines:             100000
URxvt*scrollTtyOutput:       false
URxvt*scrollWithBuffer:      true
URxvt*scrollTtyKeypress:     true
URxvt*iso14755:              False

!urxvt*matcher.pattern.1:  (/\\S+\\.pdf)\\b
!urxvt*matcher.launcher.1: zathura $1

!## teh dpi stuff
Xft.dpi: 96
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

Emacs*useXIM: true


